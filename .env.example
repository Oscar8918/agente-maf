# OpenAI API Key (requerido)
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-tu-api-key-aqui

# Modelo a usar (opcional, default: gpt-4o-mini)
# Opciones: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
MODEL_ID=gpt-4o-mini

# Configuración del servidor (opcional)
PORT=8000
HOST=0.0.0.0
DEBUG=false

# ==================== PostgreSQL ====================
DB_NAME=tu_base_de_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña
DB_HOST=tu-servidor.postgres.database.azure.com
DB_PORT=5432

# ==================== SIIGO Nube ERP ====================
# Function Key de Azure Functions (obtener del Azure Portal > siigocrud > App keys)
SIIGO_FUNCTION_KEY=tu-function-key-aqui
